<TabPane prefHeight="545.0" prefWidth="505.0" tabClosingPolicy="UNAVAILABLE"
  xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="sample.Controller">
  <tabs>
    <Tab text="Product Line">
      <content>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="304.0" prefWidth="495.0">
          <children>
            <GridPane layoutX="10.0" layoutY="20.0" prefHeight="137.0" prefWidth="464.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="209.84366607666016" minWidth="0.0"
                  prefWidth="191.00524139404297"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="360.2105484008789" minWidth="10.0"
                  prefWidth="272.99475860595703"/>
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
              </rowConstraints>
              <children>
                <Label text="Product Name "/>
                <Label text="Manufacturer" GridPane.rowIndex="1"/>
                <Label text="Item Type" GridPane.rowIndex="2"/>
                <TextField fx:id="txtProduct" GridPane.columnIndex="1"/>
                <TextField fx:id="txtMan" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <ChoiceBox fx:id="itemTypeCB" prefHeight="27.0" prefWidth="271.0"
                  GridPane.columnIndex="1" GridPane.rowIndex="2"/>
              </children>
            </GridPane>
            <Button fx:id="addProd" layoutX="284.0" layoutY="166.0" mnemonicParsing="false"
              onAction="#addProduct" text="Add Product "/>
            <Label layoutX="12.0" layoutY="192.0" prefHeight="29.0" prefWidth="145.0"
              text="Existing Products"/>
            <TableView fx:id="tbvProduct" layoutX="4.0" layoutY="228.0" prefHeight="277.0"
              prefWidth="494.0">
              <columns>
                <TableColumn fx:id="productTbc" prefWidth="158.0" text="Product"/>
                <TableColumn fx:id="tbcManufacturer" prefWidth="173.0" text="Manufacturer"/>
                <TableColumn fx:id="tbcType" prefWidth="161.0" text="Type"/>
              </columns>
            </TableView>
          </children>
        </AnchorPane>
      </content>
    </Tab>

    <Tab text="Produce">
      <content>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
          <children>
            <Label layoutX="46.0" layoutY="22.0" prefHeight="22.0" prefWidth="118.0"
              text="Choose Product"/>
            <ListView fx:id="chooseProdLV" layoutX="7.0" layoutY="47.0" prefHeight="279.0"
              prefWidth="195.0"/>
            <Label layoutX="240.0" layoutY="24.0" prefHeight="17.0" prefWidth="146.0"
              text="Choose Quantity"/>
            <ComboBox fx:id="dropDown" layoutX="218.0" layoutY="47.0" prefWidth="150.0"/>
            <Button fx:id="recordProd" layoutX="217.0" layoutY="125.0" mnemonicParsing="false"
              onAction="#recProduction" prefHeight="34.0" prefWidth="152.0"
              text="Record Production"/>
          </children>
        </AnchorPane>
      </content>
    </Tab>

    <Tab text="Production Log">
      <content>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
          <children>
            <TextArea fx:id="productionLog" layoutX="22.0" layoutY="16.0" prefHeight="481.0"
              prefWidth="468.0"/>
          </children>
        </AnchorPane>
      </content>
    </Tab>

  </tabs>
</TabPane>
